{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++-14 build active file",
			"command": "/usr/bin/g++-14",
			"args": [
				"-std=c++23",
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"../lib/*.cpp",
				"-o",
				"${fileDirname}/debug/program",
				""
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++-14"
		}
	]
}